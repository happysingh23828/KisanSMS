<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

    <TextView
            tools:text="24 mar 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message_date"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_name"
            tools:text="Happy Singh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintStart_toEndOf="@+id/name_icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <TextView
            android:id="@+id/tv_name2"
            android:text="@string/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_name"/>

    <TextView
            tools:text="154555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sent_otp"
            app:layout_constraintTop_toTopOf="@+id/tv_name2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name2"
            app:layout_constraintStart_toEndOf="@+id/tv_name2"
            android:layout_marginStart="8dp"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/md_blue_grey_400"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name2"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_name2"
            app:layout_constraintEnd_toEndOf="@+id/tv_message_date"
            />

    <TextView
            android:id="@+id/name_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_text"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Hs"
            android:visibility="gone"
            android:letterSpacing="0.1"
            tools:ignore="UnusedAttribute"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="Sent to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/name_icon"
            app:layout_constraintStart_toEndOf="@+id/name_icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>


</android.support.constraint.ConstraintLayout>